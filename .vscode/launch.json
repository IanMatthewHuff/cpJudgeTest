{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5171",
            "webRoot": "${workspaceFolder}/src",
            "preLaunchTask": "npm: dev",
            "serverReadyAction": {
                "pattern": "Local:\\s+(https?://localhost:\\d+)",
                "uriFormat": "%s",
                "action": "openExternally"
            }
        },
        {
            "name": "Launch Edge",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:5171",
            "webRoot": "${workspaceFolder}/src",
            "preLaunchTask": "npm: dev",
            "serverReadyAction": {
                "pattern": "Local:\\s+(https?://localhost:\\d+)",
                "uriFormat": "%s",
                "action": "openExternally"
            }
        },
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}/src"
        },
        {
            "name": "Launch Preview (Production)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4173",
            "webRoot": "${workspaceFolder}/dist",
            "preLaunchTask": "npm: preview"
        }
    ]
}
